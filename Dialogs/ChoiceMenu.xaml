<UserControl x:Class="VisualNovel.ChoiceMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <UserControl.Resources>
        <!-- Dialogues Latin Font Family (will be set programmatically) -->
        <FontFamily x:Key="MinecraftFont">Arial</FontFamily>
        
        <!-- Post-Soviet Old TV Style Effects -->
        <DropShadowEffect x:Key="BeigeGlow" Color="#FFD4C4A0" BlurRadius="3" ShadowDepth="0" Opacity="0.4"/>
        
        <!-- Custom Choice Button Style - Post-Soviet Style -->
        <Style x:Key="ChoiceButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#AAD4C4A0"/>
            <Setter Property="Foreground" Value="#FF8B7355"/>
            <Setter Property="BorderBrush" Value="#FFD4C4A0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15,12,15,12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontFamily" Value="{StaticResource MinecraftFont}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                               Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               MinHeight="{TemplateBinding MinHeight}">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF8B7355" 
                                                 BlurRadius="3" 
                                                 ShadowDepth="1" 
                                                 Opacity="0.5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                             VerticalAlignment="Center"
                                             Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#CCD4C4A0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FFD4C4A0"/>
                                <Setter Property="Foreground" Value="#FF2A1A0A"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#AAD4C4A0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Border Background="#FFE8D4B0" BorderBrush="#FFD4C4A0" BorderThickness="3" 
            Padding="20" MaxWidth="600"
            HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border.Effect>
            <DropShadowEffect Color="#FF8B7355" BlurRadius="8" ShadowDepth="2" Opacity="0.6"/>
        </Border.Effect>
        <StackPanel x:Name="ChoicesContainer">
            <!-- Choices will be added dynamically -->
        </StackPanel>
    </Border>
</UserControl>

